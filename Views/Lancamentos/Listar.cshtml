@model List<Financeiro.Models.Lancamento>

@{
    ViewData["Title"] = "Lançamentos Importados";
}

<h1>Lançamentos Importados</h1>

<p>
    <a asp-controller="Importacao" asp-action="Index">Importar Novo Arquivo</a>
</p>
<hr />

<form asp-controller="Lancamentos" asp-action="Listar" method="get">
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label>Data Inicial</label>
                <input type="date" name="dataInicial" value="@ViewBag.DataInicial" class="form-control" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Data Final</label>
                <input type="date" name="dataFinal" value="@ViewBag.DataFinal" class="form-control" />
            </div>
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Filtrar</button>
            </div>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Data</th>
            <th>Valor</th>
            <th>Descrição</th>
            <th>Conta</th>
            <th>Banco</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DataPostagem.ToLocalTime().ToString("dd/MM/yyyy")</td>
                <td>@item.Valor.ToString("C2")</td>
                <td>@item.Memo</td>
                <td>@item.Conta.NumeroConta</td>
                <td>@item.Conta.Banco.Nome</td>
            </tr>
        }
    </tbody>
</table>